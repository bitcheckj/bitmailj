#!/usr/bin/env bash

BIN=`dirname "$0"`
pushd $BIN/../log 1> /dev/null

. ../bin/config

#echo "javaopts=$JAVA_OPTS"
#echo "javahome=$JAVA_HOME"

CLASSPATH='../conf'

for f in ../lib/*.jar; do
  CLASSPATH=${CLASSPATH}:$f;
done

if [ "$JAVA_HOME" == "" ]; then
    JAVA=java
else
    JAVA=$JAVA_HOME/bin/java
fi

MAIN=bitmailj.ServerMain

"$JAVA" -server -classpath ${CLASSPATH} ${JAVA_OPTS} ${ARGS} "$MAIN" $@

popd 1> /dev/null


